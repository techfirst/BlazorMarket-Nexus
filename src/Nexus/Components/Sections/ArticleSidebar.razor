@using Nexus.Models

<aside class="lg:col-span-1 mt-8 lg:mt-0">
    <div class="sticky top-24 space-y-8">
        <!-- Table of Contents -->
        @if (TableOfContents.Any())
        {
            <div class="bg-nexus-light-gray p-6 rounded-2xl">
                <h3 class="font-semibold text-nexus-dark mb-4">Table of Contents</h3>
                <nav class="space-y-2">
                    @foreach (var item in TableOfContents)
                    {
                        <a href="#@item.Id" 
                           class="@GetTocItemClass(item.Level) block text-gray-600 hover:text-nexus-blue transition-colors">
                            @item.Title
                        </a>
                    }
                </nav>
            </div>
        }
        
        <!-- Share Buttons -->
        <div class="bg-white border border-gray-100 p-6 rounded-2xl">
            <h3 class="font-semibold text-nexus-dark mb-4">Share Article</h3>
            <div class="space-y-3">
                <button class="w-full flex items-center justify-center space-x-2 px-4 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
                    </svg>
                    <span>Twitter</span>
                </button>
                <button class="w-full flex items-center justify-center space-x-2 px-4 py-3 bg-blue-800 text-white rounded-lg hover:bg-blue-900 transition-colors">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                    </svg>
                    <span>LinkedIn</span>
                </button>
                <button class="w-full flex items-center justify-center space-x-2 px-4 py-3 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                    </svg>
                    <span>Copy Link</span>
                </button>
            </div>
        </div>
        
        <!-- Related Posts -->
        @if (RelatedPosts.Any())
        {
            <div class="bg-white border border-gray-100 p-6 rounded-2xl">
                <h3 class="font-semibold text-nexus-dark mb-4">Related Articles</h3>
                <div class="space-y-4">
                    @foreach (var post in RelatedPosts)
                    {
                        <article class="group">
                            <a href="/blog/@post.Slug" class="block">
                                <div class="h-32 bg-gradient-to-r @post.FeaturedImageGradient rounded-lg mb-3 group-hover:opacity-90 transition-opacity"></div>
                                <h4 class="font-medium text-nexus-dark group-hover:text-nexus-blue transition-colors line-clamp-2">
                                    @post.Title
                                </h4>
                                <p class="text-sm text-gray-500 mt-1">@post.ReadTimeMinutes min read</p>
                            </a>
                        </article>
                    }
                </div>
            </div>
        }
    </div>
</aside>

@code {
    [Parameter, EditorRequired] public BlogPost Post { get; set; } = null!;
    [Parameter] public List<TableOfContentsItem> TableOfContents { get; set; } = new();
    [Parameter] public List<BlogPost> RelatedPosts { get; set; } = new();
    
    private string GetTocItemClass(int level)
    {
        return level switch
        {
            2 => "text-sm font-medium",
            3 => "text-sm pl-4",
            _ => "text-sm"
        };
    }
}