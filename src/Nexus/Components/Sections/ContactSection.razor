<section id="contact" class="py-20 bg-nexus-gray dark:bg-gray-800">
    <div class="max-w-4xl mx-auto px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="text-4xl font-bold text-nexus-dark dark:text-white mb-4">Get in Touch</h2>
            <p class="text-xl text-gray-600 dark:text-gray-300">Have questions? We'd love to hear from you.</p>
        </div>
        
        <form class="bg-white dark:bg-gray-700 p-8 rounded-2xl shadow-sm">
            <div class="grid md:grid-cols-2 gap-6 mb-6">
                <div>
                    <label for="firstName" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">First Name</label>
                    <input type="text" id="firstName" name="firstName" 
                           class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 dark:bg-gray-800 dark:text-white rounded-lg focus:ring-2 focus:ring-nexus-blue focus:border-transparent"
                           placeholder="John" />
                </div>
                <div>
                    <label for="lastName" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Last Name</label>
                    <input type="text" id="lastName" name="lastName" 
                           class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 dark:bg-gray-800 dark:text-white rounded-lg focus:ring-2 focus:ring-nexus-blue focus:border-transparent"
                           placeholder="Doe" />
                </div>
            </div>
            
            <div class="mb-6">
                <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Email</label>
                <input type="email" id="email" name="email" 
                       class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 dark:bg-gray-800 dark:text-white rounded-lg focus:ring-2 focus:ring-nexus-blue focus:border-transparent"
                       placeholder="john@example.com" />
            </div>
            
            <div class="mb-6">
                <label for="company" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Company</label>
                <input type="text" id="company" name="company" 
                       class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 dark:bg-gray-800 dark:text-white rounded-lg focus:ring-2 focus:ring-nexus-blue focus:border-transparent"
                       placeholder="Your Company" />
            </div>
            
            <div class="mb-6">
                <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Message</label>
                <textarea id="message" name="message" rows="4"
                          class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 dark:bg-gray-800 dark:text-white rounded-lg focus:ring-2 focus:ring-nexus-blue focus:border-transparent"
                          placeholder="Tell us how we can help..."></textarea>
            </div>
            
            <Button Type="submit" Variant="ButtonVariant.Primary" Size="ButtonSize.Large" AdditionalClasses="w-full">
                Send Message
            </Button>
        </form>
    </div>
</section>