@rendermode InteractiveServer

<nav class="fixed top-0 w-full bg-white/95 dark:bg-gray-900/95 backdrop-blur-md z-50 border-b border-gray-100 dark:border-gray-800">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
            <a href="/" class="text-2xl font-semibold text-nexus-dark tracking-tight">
                Nexus
            </a>
            
            <div class="hidden md:flex items-center space-x-8">
                <a href="/#features" class="text-gray-600 dark:text-gray-300 hover:text-nexus-dark dark:hover:text-white transition-colors font-medium">Features</a>
                <a href="/#pricing" class="text-gray-600 dark:text-gray-300 hover:text-nexus-dark dark:hover:text-white transition-colors font-medium">Pricing</a>
                <a href="/blog" class="@GetBlogLinkClass() transition-colors font-medium">Blog</a>
                <a href="/#faq" class="text-gray-600 dark:text-gray-300 hover:text-nexus-dark dark:hover:text-white transition-colors font-medium">FAQ</a>
                <button @onclick="ToggleTheme" class="p-2 rounded-lg text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors" title="Toggle theme">
                    @if (ThemeService?.IsDarkMode == true)
                    {
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
                        </svg>
                    }
                    else
                    {
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
                        </svg>
                    }
                </button>
                <a href="/#contact" class="bg-nexus-blue text-white px-6 py-2 rounded-full hover:bg-nexus-blue-dark transition-all duration-200 hover:shadow-md font-medium">
                    Get Started
                </a>
            </div>
            
            <button class="md:hidden p-2 text-gray-600 dark:text-gray-300" @onclick="ToggleMobileMenu">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>
    </div>
    
    <div id="mobile-menu" class="@GetMobileMenuClass() md:hidden bg-white dark:bg-gray-900 border-t border-gray-100 dark:border-gray-800">
        <div class="px-6 py-4 space-y-4">
            <a href="/#features" class="block text-gray-600 dark:text-gray-300 hover:text-nexus-dark dark:hover:text-white font-medium" @onclick="ToggleMobileMenu">Features</a>
            <a href="/#pricing" class="block text-gray-600 dark:text-gray-300 hover:text-nexus-dark dark:hover:text-white font-medium" @onclick="ToggleMobileMenu">Pricing</a>
            <a href="/blog" class="@GetBlogLinkClass() font-medium block">Blog</a>
            <a href="/#faq" class="block text-gray-600 dark:text-gray-300 hover:text-nexus-dark dark:hover:text-white font-medium" @onclick="ToggleMobileMenu">FAQ</a>
            <button @onclick="ToggleTheme" class="flex items-center justify-center w-full p-3 text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors rounded-lg mb-2">
                @if (ThemeService?.IsDarkMode == true)
                {
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
                    </svg>
                    <span>Light Mode</span>
                }
                else
                {
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
                    </svg>
                    <span>Dark Mode</span>
                }
            </button>
            <a href="/#contact" class="block bg-nexus-blue text-white text-center px-6 py-2 rounded-full hover:bg-nexus-blue-dark transition-colors w-full font-medium" @onclick="ToggleMobileMenu">
                Get Started
            </a>
        </div>
    </div>
</nav>

