@using Nexus.Models

<nav class="text-sm mb-8" aria-label="Breadcrumb">
    <ol class="flex items-center space-x-2 text-gray-500">
        <li>
            <a href="/" class="hover:text-nexus-blue transition-colors">Home</a>
        </li>
        @foreach (var item in Items)
        {
            <li class="flex items-center space-x-2">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 111.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                </svg>
                @if (item.IsActive)
                {
                    <span class="text-nexus-dark font-medium">@item.Text</span>
                }
                else
                {
                    <a href="@item.Url" class="hover:text-nexus-blue transition-colors">@item.Text</a>
                }
            </li>
        }
    </ol>
</nav>

@code {
    [Parameter] public List<BreadcrumbItem> Items { get; set; } = new();
}