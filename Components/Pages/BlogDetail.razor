@page "/blog/{slug}"
@using Nexus.Components.Sections
@using Nexus.Models
@using Nexus.Services

@if (IsLoading)
{
    <div class="min-h-screen flex items-center justify-center">
        <div class="text-center">
            <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-nexus-blue mb-4"></div>
            <p class="text-gray-600">Loading article...</p>
        </div>
    </div>
}
else if (Post == null)
{
    <div class="min-h-screen flex items-center justify-center">
        <div class="text-center max-w-md mx-auto px-6">
            <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 12h6m-6-4h6m2 5.291A7.962 7.962 0 0112 20.5a7.962 7.962 0 01-5.657-2.343m0-8.686A7.962 7.962 0 0112 7.5a7.962 7.962 0 015.657 2.343M12 2.5a9.5 9.5 0 100 19 9.5 9.5 0 000-19z"/>
            </svg>
            <h1 class="text-2xl font-bold text-gray-900 mb-2">Article Not Found</h1>
            <p class="text-gray-600 mb-6">The article you're looking for doesn't exist or may have been moved.</p>
            <Button Variant="ButtonVariant.Primary" Size="ButtonSize.Medium" OnClick="NavigateToBlob">
                Back to Blog
            </Button>
        </div>
    </div>
}
else
{
    <PageTitle>@Post.Title | Nexus Blog</PageTitle>
    
    <div class="scroll-on-nav bg-white min-h-screen">
        <!-- Article Content -->
        <div class="max-w-4xl mx-auto px-6 lg:px-8 py-12">
            <!-- Breadcrumb -->
            <nav class="text-sm mb-8">
                <ol class="flex items-center space-x-2 text-gray-500">
                    <li>
                        <a href="/blog" class="hover:text-nexus-blue transition-colors">Blog</a>
                    </li>
                    <li class="flex items-center space-x-2">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 111.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                        </svg>
                        <span class="text-gray-900">@Post.Title</span>
                    </li>
                </ol>
            </nav>

            <!-- Article Header -->
            <header class="mb-8">
                <h1 class="text-3xl md:text-4xl font-semibold text-gray-900 mb-6 leading-tight tracking-tight">
                    @Post.Title
                </h1>
                
                <!-- Author Info -->
                <div class="flex items-center mb-8">
                    <div class="w-10 h-10 rounded-full overflow-hidden mr-3 bg-gray-100">
                        <img src="https://i.pravatar.cc/40?u=@Post.Author" 
                             alt="@Post.Author" 
                             class="w-full h-full object-cover" 
                             loading="lazy" />
                    </div>
                    <div>
                        <div class="font-medium text-gray-900">@Post.Author</div>
                        <div class="text-sm text-gray-500">@Post.AuthorJobTitle</div>
                    </div>
                    <div class="ml-auto text-right">
                        <div class="text-sm text-gray-500">@Post.PublishedDate.ToString("MMM dd, yyyy")</div>
                    </div>
                </div>
            </header>

            <!-- Featured Image -->
            <div class="mb-8">
                <img src="https://picsum.photos/id/@(Post.Id + 50)/800/400" 
                     alt="@Post.Title" 
                     class="w-full h-auto rounded-lg" 
                     loading="lazy" />
            </div>

            <!-- Article Content -->
            <div class="prose prose-lg max-w-none">
                <h2 class="text-2xl font-semibold text-gray-900 mb-4">Starting with the User</h2>
                <p class="text-gray-700 leading-relaxed mb-6">
                    We began by talking directly with users to learn what they needed from their financial dashboards. <strong>Simplicity, speed, and flexibility</strong> topped the list. That feedback shaped every decision moving forward.
                </p>
                
                <div class="text-gray-700 leading-relaxed">
                    @((MarkupString)Post.FullContent)
                </div>
                
                <p class="text-gray-700 leading-relaxed mb-6 mt-6">
                    The result is a dashboard that puts the user first, with clean interfaces that make complex financial data easy to understand and act upon. Every element serves a purpose, and nothing gets in the way of getting work done.
                </p>
            </div>

            <!-- Social Share -->
            <div class="border-t border-gray-100 pt-8 mt-12">
                <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
                    <a href="/blog" class="inline-flex items-center text-nexus-blue hover:text-nexus-blue-dark transition-colors font-medium">
                        ‚Üê Back to Blog
                    </a>
                    
                    <div class="flex items-center space-x-4 text-sm text-gray-500">
                        <span>Share this article:</span>
                        <div class="flex space-x-2">
                            <button class="text-gray-400 hover:text-nexus-blue transition-colors" title="Share on Twitter">
                                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
                                </svg>
                            </button>
                            <button class="text-gray-400 hover:text-nexus-blue transition-colors" title="Share on LinkedIn">
                                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                                </svg>
                            </button>
                            <button class="text-gray-400 hover:text-nexus-blue transition-colors" title="Copy link">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Related Articles -->
        @if (_relatedPosts.Any())
        {
            <section class="py-16 bg-white">
                <div class="max-w-7xl mx-auto px-6 lg:px-8">
                    <h2 class="text-3xl font-semibold text-nexus-dark mb-8 text-center tracking-tight">Related Articles</h2>
                    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                        @foreach (var relatedPost in _relatedPosts)
                        {
                            <BlogCard Post="relatedPost" />
                        }
                    </div>
                </div>
            </section>
        }
    </div>
}